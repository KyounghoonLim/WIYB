{
  ".input-basic": {
    "width": "100%",
    "height": "52px",
    "padding": "16px 15px",
    "borderRadius": "12px",
    "display": "flex",
    "alignItems": "center",
    "@apply bg-@-neutral-000": true,
    "@apply text-@-text-black": true,
    "@apply typograph-15": true,
    "@apply font-bold": true,
    "@apply border-@-line-medium": true,
    "@apply border-01": true,
    "&:placeholder": {
      "@apply text-@-text-light": true
    },
    "&:focus": {
      "outline": "none",
      "@apply border-@-primary-500": true,
      "@apply caret-@-primary-500": true
    }
  },
  ".input-error": {
    "@apply border-@-error-500": true,
    "&:hover": {  
      "@apply border-@-error-500": true
    }
  }
}