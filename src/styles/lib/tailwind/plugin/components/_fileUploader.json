{
  ".file-uploader": {
    "width": "100px",
    "height": "100px",
    "borderRadius": "50%",
    "display": "flex",
    "position": "relative",
    "margin": "0 auto",
    "cursor": "pointer",
    "@apply bg-@-neutral-000": true,
    "& img": {
      "width": "100%",
      "height": "100%",
      "borderRadius": "50%",
      "backgroundPosition": "center",
      "backgroundSize": "cover",
      "flexShrink": 0,
      "flexGrow": 0
    },
    "& input": {
      "display": "none"
    }
  }
}
