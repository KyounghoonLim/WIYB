{
  ".file-uploader": {
    "width": "100px",
    "height": "100px",
    "borderRadius": "50%",
    "display": "flex",
    "position": "relative",
    "margin": "0 auto",
    "cursor": "pointer",
    "@apply bg-@-neutral-000": true,
    "& img": {
      "width": "100%",
      "height": "100%",
      "borderRadius": "50%",
      "backgroundPosition": "center",
      "backgroundSize": "cover",
      "flexShrink": 0,
      "flexGrow": 0
    },
    "& input": {
      "display": "none"
    }
  },
  ".file-list-container": {
    "width": "100%",
    "display": "flex",
    "algnItems": "center",
    "flexWrap": "nowrap",
    "gap": "8px",
    "position": "relative",
    "padding": "16px",
    "& img": {
      "width": "100%",
      "height": "100%",
      "borderRadius": "20px",
      "backgroundPosition": "center",
      "backgroundSize": "cover",
      "flexShrink": 0,
      "flexGrow": 0,
      "cursor": "pointer",
      "@apply bg-@-bg-light": true
    },
    "& input": {
      "display": "none"
    }
  },
  ".file-list-uploader": {
    "width": "56px",
    "height": "56px",
    "display": "flex",
    "position": "relative",
    "cursor": "pointer",
    "borderRadius": "20px",
    "& img": {
      "&:hover": {
        "@apply bg-@-neutral-100": true
      }
    }
  },
  ".file-list-item": {
    "width": "56px",
    "height": "56px",
    "position": "relative",
    "borderRadius": "20px",
    "&::after": {
      "content": "",
      "position": "absolute",
      "width": "100%",
      "height": "100%"
    },
    "&:hover": {
      "@apply bg-@-neutral-100": true,
      "&::after": {
        "content": ""
      }
    }
  }
}
