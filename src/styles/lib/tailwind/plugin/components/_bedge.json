{
  ".bedge": {
    "padding": "7.5px 16px",
    "gap": "8px",
    "borderRadius": "16px",
    "maxWidth": "150px",
    "flexShrink": 0,
    "flexGrow": 0,
    "@apply typograph-14": true,
    "@apply text-@-neutral-900": true,
    "@apply bg-@-bedge-primary": true,
    "@apply flex-row-center": true,
    "@apply truncate": true
  },
  ".bedge-sm": {
    "@apply bedge": true,
    "@apply typograph-10": true,
    "padding": "4px 8px",
    "maxWidth": "70px"
  },
  ".bedge-md": {
    "@apply bedge": true,
    "@apply typograph-10": true,
    "padding": "4px 8px",
    "maxWidth": "125px"
  }
}
