{
  ".radio-group": {
    "width": "100%",
    "height": "44px",
    "borderRadius": "20px",
    "display": "flex",
    "flexWrap": "no-wrap",
    "justifyContent": "start",
    "alignItems": "center",
    "position": "relative",
    "@apply bg-@-neutral-200": true
  },
  ".radio-item": {
    "height": "100%",
    "cursor": "pointer",
    "padding": "0 8px",
    "borderRadius": "20px",
    "@apply typograph-14": true,
    "@apply text-@-text-placeholder": true,
    "@apply flex-row-center": true,
    "@apply truncate": true,
    "&:hover": {
      "@apply text-@-text-medium": true
    },
    "&:checked": {
      "@apply text-@-neutral-900": true
    },
    "&:disabled": {
      "cursor": "not-allowed !important",
      "pointerEvents": "none",
      "@apply !bg-white": true,
      "@apply !text-@-text-dimmed": true
    }
  },
  ".radio-indicator": {
    "height": "100%",
    "borderRadius": "20px",
    "padding": "0 8px",
    "position": "absolute",
    "top": "0",
    "left": "0",
    "transition": "transform 0.3s ease-in-out",
    "@apply typograph-14": true,
    "@apply bg-@-neutral-000": true,
    "@apply text-@-neutral-900": true,
    "@apply flex-row-center": true,
    "@apply truncate": true
  }
}
