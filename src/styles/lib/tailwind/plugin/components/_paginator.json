{
  ".paginator": {
    "width": "100%",
    "height": "auto",
    "gap": "16px",
    "@apply flex-col-start": true
  },
  ".paginator-indicator": {
    "width": "100%",
    "height": "50px",
    "position": "relative",
    "gap": "16px",
    "padding": "0px 16px",
    "@apply flex-row-center": true,
    " .paginator-indicator-item": {
      "width": "24px",
      "textAlign": "center",
      "cursor": "pointer",
      "@apply typograph-18": true,
      "@apply text-neutral-700": true,
      "&:hover": {
        "@apply text-neutral-600": true
      },
      "&[data-selected='true']": {
        "fontWeight": "bold"
      }
    },
    " .paginator-indicator-arrow": {
      "position": "absolute",
      "cursor": "pointer",
      "@apply fill-neutral-700": true,
      "&:hover": {
        "@apply fill-neutral-600": true
      },
      "&[data-direction='prev']": {
        "left": 16
      },
      "&[data-direction='next']": {
        "right": 16
      }
    }
  }
}
