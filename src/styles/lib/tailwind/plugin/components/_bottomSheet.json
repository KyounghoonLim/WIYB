{
  ".bottom-sheet-background": {
    "width": "100vw",
    "position": "fixed",
    "top": "0px",
    "left": "0px",
    "backgroundColor": "#00000080",
    "@apply h-dscreen": true
  }, 
  ".bottom-sheet-container": {
    "width": "100%",
    "maxHeight": "75vh",
    "display": "flex",
    "flexDirection": "column",
    "padding": "16px 16px 0px",
    "position": "absolute",
    "bottom": "0",
    "backgroundColor": "white",
    "borderTopLeftRadius": "20px",
    "borderTopRightRadius": "20px",
    "willChange": "transform"
  },
  ".bottom-sheet-header": {
    "width": "100%",
    "height": "44px",
    "position": "relative",
    "@apply flex-row-center": true
  },
  ".bottom-sheet-body": {
    "maxWidth": "1024px",
    "maxHeight": "100%",
    "overflow": "auto",
    "display": "flex",
    "flexDirection": "column",
    "padding": "16px 8px",
    "@apply hide-scrollbar": true
  }
}