{
  ".textarea-container": {
    "width": "100%",
    "height": "100%",
    "position": "relative",
    "display": "flex",
    "justifyContent": "space-between",
    "alignItems": "center",
    "gap": "4px",
    "padding": "24px",
    "borderRadius": "12px",
    "overflow": "hidden",
    "@apply typograph-16": true,
    "@apply font-normal": true,
    "@apply hide-scrollbar": true,
    "@apply bg-bg-light": true
  },
  ".textarea": {
    "width": "100%",
    "height": "100%",
    "backgroundColor": "transparent",
    "@apply resize-none": true,
    "@apply hide-scrollbar": true,
    "&:focus": {
      "outline": "none"
    }
  }
}
